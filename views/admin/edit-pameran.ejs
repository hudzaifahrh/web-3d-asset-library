<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="/admin/add-pameran" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid' : '' %>" type="text" name="title" id="title" value="<%if (editing || hasError) { %><%= pameran.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="upload">Video</label>
                <input type="file" name="upload" id="upload">
            </div>
            <div class="form-control">
                <label for="image">Poster</label>
                <input type="file" name="image" id="image">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Add Property</button>
        </form>
    </main>
    <div class="danger">
        <p><strong>Notes!</strong></p>
        <p><b>For video</b>, you'll need to upload with a ratio of 16:9 in landscape</p>
        <p><b>For poster</b>, you'll need to upload with a ratio of 16:9 in portrait</p>
    </div>
<%- include('../includes/end.ejs') %>